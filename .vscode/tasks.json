{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "publish (mac or linux)",
            "type": "shell",
            "command": "./publish.sh"
        },
        {
            "label": "upload guitar videos",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/manage_guitar_videos.py",
                "--upload"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "restore guitar videos",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/manage_guitar_videos.py",
                "--restore"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "upload photo albums",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/manage_photo_albums.py",
                "--upload"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "restore photo albums",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/manage_photo_albums.py",
                "--restore"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "backup db",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/manage_photo_albums_db.py",
                "--backup"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "restore db",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/manage_photo_albums_db.py",
                "--restore"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "generate site",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/generate_site.py"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "edit photo albums",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/photo_albums_gui.py"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "test upload photo albums",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/manage_photo_albums.py",
                "--upload", "--test"
            ],
            "group": "test"
        },
        {
            "label": "test restore photo albums",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/manage_photo_albums.py",
                "--restore", "--test"
            ],
            "group": "test"
        },
        {
            "label": "reset test env",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/reset_test_env.py"
            ],
            "group": "test"
        },
        {
            "label": "generate test site",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/generate_site.py",
                "--test"
            ],
            "group": "test"
        },
        {
            "label": "test edit photo albums",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/website_generation/photo_albums_gui.py",
                "--test"
            ],
            "group": {
                "kind": "test"
            }
        },
    ]
}